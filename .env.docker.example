# PromptQL MCP Server - Docker Environment Variables
# Copy this file to .env and customize as needed
# All values below are working defaults for local development

# ==============================================
# Dashboard Security
# ==============================================
DASHBOARD_API_KEY=my-dashboard-secret-2024
DASHBOARD_PORT=8765
DASHBOARD_CORS_ORIGINS=http://localhost:8765,http://127.0.0.1:8765

# ==============================================
# PromptQL API Configuration (Server Config)
# Get your key from: https://promptql.hasura.io
# ==============================================
PROMPTQL_API_KEY=pql_your-promptql-api-key-here
PGQL_BASE_URL=http://localhost:8765
PROMPTQL_AUTH_TOKEN=ddn_your-auth-token-here
PROMPTQL_AUTH_MODE=public

# ==============================================
# Hasura CE Configuration
# Points to the sample Hasura instance below
# ==============================================
PROMPTQL_HASURA_GRAPHQL_ENDPOINT=http://hasura:8080/v1/graphql
PROMPTQL_HASURA_ADMIN_SECRET=myadminsecretkey

# ==============================================
# Sample Hasura Setup (PostgreSQL + Hasura CE)
# These create a local Hasura instance for testing
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=appdb
POSTGRES_PORT=15432

HASURA_PORT=18080
HASURA_GRAPHQL_DATABASE_URL=postgresql://postgres:postgrespassword@postgres:5432/appdb
HASURA_GRAPHQL_ADMIN_SECRET=myadminsecretkey
HASURA_GRAPHQL_ENABLE_CONSOLE=true
HASURA_GRAPHQL_DEV_MODE=true
HASURA_GRAPHQL_ENABLED_LOG_TYPES=startup,http-log,webhook-log,websocket-log,query-log
